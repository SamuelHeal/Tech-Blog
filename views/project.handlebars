<div class="text-center">
  <h2>{{name}}</h2>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  <section class="add-comment roboto">
    <form class="form comment-form font">
      <div class="form-group">
        <textarea class="form-input" type="text" id="comment"  placeholder="Add a comment" required></textarea>
      </div>
      <div class="form-group add-container">
        <button class="btn btn-primary log" type="submit" id="commentButton" post-id="{{viewPost.id}}">Comment</button>
      </div>
    </form>
</section>
</div>
